{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "player",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "player-media",
    "player-network"
  ],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "store:allow-delete",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "libmpv:default",
    "fs:allow-read-text-file",
    "fs:allow-resource-read-recursive",
    "core:window:allow-set-fullscreen",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*"
        },
        {
          "url": "http://*"
        },
        {
          "url": "http://*:*/*"
        }
      ]
    }
  ]
}