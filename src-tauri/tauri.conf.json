{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "nor-regret",
  "version": "1.1.0",
  "identifier": "nor-regret",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5123",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "亦无悔",
        "width": 1200,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**/*"]
      },
      "csp": {
        "default-src": ["'self'", "ipc:", "http://ipc.localhost"],
        "img-src": ["'self'", "asset:", "http://asset.localhost"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "resources": [
      "lib/**/*"
    ],
    "category": "Entertainment",
    "macOS": {
      "entitlements": "./Entitlements.plist"
    }
  },
  "plugins": {
    "updater": {
      "dangerousInsecureTransportProtocol": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVEMDRDRkNEOTNENkVBNTYKUldSVzZ0YVR6YzhFN1FXemdoQ3daTWp1U3BNeHIyRlIrZTdaTXJxODNWeUFvZ2pLVzZGbkY2dzAK",
      "endpoints": [
        "https://github.com/q2316367743/omni-player/releases/latest/download/latest.json",
        "https://api.upgrade.toolsetlink.com/v1/tauri/upgrade?tauriKey=QNvZIeOs3vczr-8gwyhlgg&versionName={{current_version}}&appointVersionName=&devModelKey=&devKey=&target={{target}}&arch={{arch}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
