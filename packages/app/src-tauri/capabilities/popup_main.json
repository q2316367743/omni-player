{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "popup_main",
  "description": "入口面板",
  "windows": [
    "popup_main"
  ],
  "permissions": [
    "dialog:default",
    "updater:default",
    "log:default",
    "os:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": ["-c", { "validator": "\\S+" }],
          "sidecar": false
        },
        {
          "name": "exec-bash",
          "cmd": "bash",
          "args": ["-c", { "validator": "\\S+" }],
          "sidecar": false
        },
        {
          "name": "exec-cmd",
          "cmd": "cmd",
          "args": ["/c", { "validator": "\\S+" }],
          "sidecar": false
        },
        {
          "name": "exec-powershell",
          "cmd": "powershell",
          "args": ["-Command", { "validator": "\\S+" }],
          "sidecar": false
        },
        {
          "name": "exec-python",
          "cmd": "python",
          "args": true,
          "sidecar": false
        },
        {
          "name": "exec-python3",
          "cmd": "python3",
          "args": true,
          "sidecar": false
        },
        {
          "name": "exec-node",
          "cmd": "node",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "shell:allow-spawn",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "store:allow-delete",
    "store:allow-entries",
    "core:default",
    "core:app:allow-set-app-theme",
    "core:event:allow-listen",
    "core:webview:allow-create-webview",
    "core:webview:allow-webview-show",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-set-webview-position",
    "core:webview:allow-webview-close",
    "core:webview:allow-set-webview-size",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-is-always-on-top",
    "core:window:allow-set-always-on-top",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*"
        },
        {
          "url": "http://*"
        },
        {
          "url": "http://*:*/*"
        }
      ]
    },
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "fs:allow-mkdir",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPDATA/**/*" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$APPDATA/**/*" }]
    },
    "log:default",
    "opener:allow-open-url",
    "opener:allow-reveal-item-in-dir",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$APPDATA/**/*" },
        { "path": "$LOCALAPPDATA/**/*" },
        { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT/**/*" },
        { "path": "$DOWNLOAD/**/*" },
        { "path": "$PICTURE/**/*" },
        { "path": "$MUSIC/**/*" },
        { "path": "$VIDEO/**/*" },
        { "path": "/**/*" }
      ]
    }
  ]
}